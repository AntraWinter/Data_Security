<Window x:Class="WpfApp1.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод данных" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10" Width="300">
        <TextBlock Text="{Binding PromptText}" Margin="0,0,0,5"/>
        <TextBox x:Name="InputTextBox" Margin="0,5,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Ок" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Отмена" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
