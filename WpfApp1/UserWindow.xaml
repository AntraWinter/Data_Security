<Window x:Class="WpfApp1.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Личный кабинет" Height="250" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Приветствие -->
        <TextBlock Grid.Row="0" Text="{Binding WelcomeMessage}" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Сменить пароль" Width="120" Margin="0,0,10,0" Click="ChangePasswordButton_Click"/>
            <Button Content="Выйти" Width="120" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
