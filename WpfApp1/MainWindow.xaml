<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Окно входа в программу" Height="320" Width="420">
    <Grid>
        <Label Content="Введите имя:" HorizontalAlignment="Left" Height="35" Margin="35,29,0,0" VerticalAlignment="Top" Width="200" FontSize="16"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Left" Height="35" Margin="35,104,0,0" VerticalAlignment="Top" Width="200" FontSize="16"/>
        <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Center" Height="30" Margin="0,139,0,0" VerticalAlignment="Top" Width="340" FontSize="16"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="240,189,0,0" VerticalAlignment="Top" Height="40" Width="140" Cursor="Hand" Click="CancelButton_Click"/>
        <Button Content="Ок" HorizontalAlignment="Left" Margin="40,189,0,0" VerticalAlignment="Top" Height="40" Width="140" Cursor="Hand" Click="OkButton_Click"/>
        <TextBox x:Name="UsernameInput" HorizontalAlignment="Center" Height="30" Margin="0,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" FontSize="16"/>

    </Grid>
</Window>
